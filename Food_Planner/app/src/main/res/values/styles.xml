<resources>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/light_red</item>                   <!--header background-->
        <item name="android:windowBackground">@drawable/date_picker_background</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/light_red</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/gray</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/gray</item>    <!--days of the week-->
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@drawable/date_picker_background</item>
        <item name="android:textColorPrimary">@color/light_red</item>
        <item name="android:fontFamily">@font/amita</item>
        <item name="colorAccent">@color/light_red</item>
        <item name="android:buttonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:textAppearanceLarge">@style/DatePickerTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDayText</item>
        <item name="materialCalendarHeaderTitle">@style/CustomHeaderText</item>
    </style>

    <style name="DatePickerButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/amita</item>
        <item name="android:backgroundTint">@color/light_red</item>
        <item name="android:background">@drawable/date_picker_button_background</item>
    </style>

    <style name="DatePickerTitleText" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/light_red</item>
        <item name="android:fontFamily">@font/amita</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Header text -->
    <style name="CustomHeaderText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/light_red</item>
    </style>

    <!-- Calendar day text -->
    <style name="CustomDayText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/light_red</item>
    </style>

    <style name="CalendarViewCustom" parent="android:Widget.Material.CalendarView">
        <item name="android:textColorPrimary">#000000</item> <!-- For day numbers -->
        <item name="android:dateTextAppearance">@style/CalendarDateText</item>
    </style>

    <style name="CalendarDateText" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/light_red</item> <!-- Custom day color -->
    </style>


</resources>
